% new commands 
\newcommand{\question}[1]{
    \ornamento \vspace{-2.5em} \\
    \begin{tcolorbox}[
        colframe=ornamentoscolor,
        colback=backdropcolor,
        % sharp corners,
        ]
        \section{\textcolor{sectioncolor}{
            \noIncludeOutline{\,\raisebox{-1pt}[17pt][9pt]{{\huge \decoone}} }
            \uline{Aufgabe #1}
        }}
    \end{tcolorbox}
}

\newcommand{\subquestion}[1]{
    \vspace{1em} 
    \begin{tcolorbox}[
        colback=backdropcolor,
        sharp corners,
        ]
        \subsection{\textcolor{sectioncolor}{
            \noIncludeOutline{\raisebox{1pt}[10pt][3pt]{\aldineleft}}
            \uline{Teil #1}
        }}
    \end{tcolorbox}
    \vspace{-1em} 
}

\newcommand{\subsubquestion}[1]{
    \subsubsection{
        \noIncludeOutline{\;}
        \textcolor{sectioncolor}{\uline{#1}}
    }
}



